<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
   http://maven.apache.org/xsd/assembly-1.1.2.xsd">
     <id>bin</id>
     <!-- Generates a zip package containing the needed files -->
     <formats>
         <format>zip</format>
     </formats>
     
     <!-- Adds dependencies to zip package under lib directory -->
     <dependencySets>
         <dependencySet>
             <!--
                Project artifact is not copied under library directory since
                it is added to the root directory of the zip package.
            -->
             <useProjectArtifact>false</useProjectArtifact>
             <outputDirectory>lib</outputDirectory>
             <unpack>false</unpack>
         </dependencySet>
     </dependencySets>
     <fileSets>
         <!--
            Adds wrapper's files and diretories. The startup
            scripts are located to src/main/scripts directory as stated by Maven
            conventions.
        -->
         <fileSet>
             <directory>${project.build.directory}/classes/bin</directory>
             <outputDirectory>bin/</outputDirectory>
             <fileMode>0644</fileMode>
             <includes>
                 <include>dycenvionyvWrapper</include>
             </includes>
         </fileSet>
         
         <fileSet>
             <directory>${project.build.scriptSourceDirectory}</directory>
             <outputDirectory></outputDirectory>
         </fileSet>
         <!-- adds jar package to the lib directory of zip package -->
         <fileSet>
             <directory>${project.build.directory}</directory>
             <outputDirectory>lib/</outputDirectory>
             <includes>
                 <include>*.jar</include>
             </includes>
         </fileSet>
         
     </fileSets>
</assembly>